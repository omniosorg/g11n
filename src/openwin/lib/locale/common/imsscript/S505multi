# Start iiimx for each desktop.

start_iiim() {
    if [ -x /usr/bin/iiimx ]; then
        XMODIFIERS=@im=iiimx
        export XMODIFIERS
        /usr/bin/iiimx -iiimd
        unset DTSTARTIMS
    fi
}

start_scim() {
    if [ -x /usr/bin/scim ]; then
        XMODIFIERS=@im=SCIM
        export XMODIFIERS
        /usr/bin/scim -d
        unset DTSTARTIMS
    fi
}

if [ "x" = "x$GTK_IM_MODULE" ]; then
    GTK_IM_MODULE=iiim
    export GTK_IM_MODULE
fi
